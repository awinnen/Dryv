@model DryvDemo.ViewModels.HomeViewModel

<html>
<head>
</head>
<body>
    <div id="app">
        <form method="post" v-on:submit="dryvVee">
            <div>
                <label asp-for="Name"></label>
                <input dryv-vee type="text" asp-for="Name" />
                <span asp-validation-for="Name"></span>
                <span>{{ errors.first('Name') }}</span>
            </div>
            <div>
                <label asp-for="Company"></label>
                <input dryv-vee type="text" asp-for="Company" />
                <span asp-validation-for="Company"></span>
                <span>{{ errors.first('Company') }}</span>
            </div>
            <div>
                <label asp-for="TaxId"></label>
                <input dryv-vee type="text" asp-for="TaxId" />
                <span asp-validation-for="TaxId"></span>
                <span>{{ errors.first('TaxId') }}</span>
            </div>

            <button type="submit">Absenden</button>
        </form>
    </div>

    <script src="js/home.js"></script>
    <dryv-script />
</body>
</html>