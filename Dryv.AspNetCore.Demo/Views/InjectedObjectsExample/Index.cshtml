@using DryvDemo.ViewModels
@using Microsoft.Extensions.Options
@model DryvDemo.ViewModels.InjectedObjectsExampleVieWModel
@inject IOptions<InjectedObjectsExampleVieWModelOptions> Options

<form>
    <div class="options">
        <div class="d-flex justify-content-between">
            <div class="form-group row">
                <label for="CompanyPrefix" class="col-sm-5 col-form-label col-form-label-sm">Company prefix</label>
                <div class="col-sm-7">
                    <input type="text" id="CompanyPrefix" class="form-control form-control-sm" name="CompanyPrefix" value="@Options.Value.CompanyPrefix">
                </div>
            </div>
            <button class="btn btn-secondary btn-sm">Update options</button>
        </div>
    </div>

    <div class="alert alert-info" role="alert">
        <div class="form-group row">
            <label asp-for="Company" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Company" class="form-control">
                <span asp-validation-for="Company"></span>
            </div>
        </div>

        <button class="btn btn-primary">Send</button>
    </div>
</form>

<dryv-script />